<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="#D57D7D"


    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    >


    <ImageView

        android:id="@+id/imageViewFoodOrderBookedItem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"

        />

    <TextView
        android:id="@+id/textViewNameFoodOrderBookedItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine|textNoSuggestions"
        android:textStyle="bold"

        android:singleLine="false"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:scrollHorizontally="false"
        android:minLines="2"
        android:layout_marginLeft="15dp"


        android:layout_toRightOf="@id/imageViewFoodOrderBookedItem"
        android:text="Name aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/textViewPriceFoodOrderBookedItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"

        android:layout_toRightOf="@+id/imageViewFoodOrderBookedItem"

        android:text="Price"
        android:textSize="15sp"
        />
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewFoodOrderBookedItem"
        >
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/numberText"
            android:text="Số lượng:"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/numberBooked"
            android:gravity="center"
            android:layout_toRightOf="@id/numberText"
            android:textSize="20sp"></TextView>

    </RelativeLayout>



</RelativeLayout>