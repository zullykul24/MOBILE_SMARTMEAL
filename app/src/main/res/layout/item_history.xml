<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_border"
        android:padding="10dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="ID: "
                android:id="@+id/text_id"
                android:textSize="20sp"

                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/history_orderid"
                android:text="123456"
                android:textSize="20sp"
                android:layout_alignTop="@id/text_id"
                android:layout_toRightOf="@id/text_id"
                ></TextView>
            <TextView
                android:layout_below="@id/history_orderid"
                android:layout_width="match_parent"
                android:text="12-12-2012"
                android:textSize="13sp"

                android:id="@+id/payment_time"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_history_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bàn "
                android:paddingLeft="20dp"
                android:textSize="13sp"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/history_tableid"
                android:textSize="13sp"
                android:layout_toRightOf="@id/text_history_table"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75000"
                android:id="@+id/history_price_total"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:layout_below="@id/text_history_table"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="đ"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:layout_alignTop="@id/history_price_total"
                android:layout_toRightOf="@id/history_price_total"></TextView>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>