<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="10"
    android:id="@+id/head_table_bill"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:id="@+id/cbd_item_stt"
        android:text="STT"
        android:textAlignment="center"
        android:background="@drawable/table_cell"
        android:textSize="16sp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"></TextView>
    <TextView
        android:paddingHorizontal="3dp"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:text="Tên món này ngon vkl bà con ơi ối langgf nước ơi món này ngon quá"
        android:id="@+id/cbd_item_dish_name"
        android:background="@drawable/table_cell"
        android:textSize="16sp"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:text="SL"
        android:id="@+id/cbd_item_sl"
        android:background="@drawable/table_cell"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"></TextView>

</LinearLayout>