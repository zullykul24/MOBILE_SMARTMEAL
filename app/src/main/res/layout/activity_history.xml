<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"

    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout
        android:background="@color/colorAccent"
        android:id="@+id/history_header"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/text_thanh_toan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:fontFamily="@font/sriracha"
            android:text="Lịch sử"
            android:gravity="center"
            android:textSize="40sp"></TextView>
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:id="@+id/history_backtohome_btn"
            android:layout_marginLeft="20dp"

            android:background="@color/colorAccent"
            android:src="@drawable/white_arr2"></ImageButton>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:id="@+id/date_picker_history"
        android:layout_below="@id/history_header">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Từ "
            android:gravity="center_vertical"
            android:id="@+id/tu"
            android:textSize="20sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/from"
            android:textSize="20sp"
            android:text="01-01-1001"
            android:textColor="#fff"
            android:paddingHorizontal="5dp"
            android:background="@drawable/date_picker"
            android:layout_toRightOf="@id/tu"
            android:layout_alignTop="@id/tu"
            ></Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" đến "
            android:gravity="center_vertical"
            android:id="@+id/den"
            android:textSize="20sp"
            android:layout_toRightOf="@id/from"
            android:layout_alignTop="@id/tu"
            ></TextView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/to"
            android:paddingHorizontal="5dp"
            android:textColor="#fff"
            android:background="@drawable/date_picker"
            android:textSize="20sp"
            android:text="01-01-1001"
            android:layout_toRightOf="@id/den"
            android:layout_alignTop="@id/tu"
            ></Button>
    </RelativeLayout>
    <Button
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lọc"
        android:layout_marginTop="20dp"
        android:background="@drawable/date_picker"
        android:textSize="15sp"
        android:textColor="#fff"
        android:id="@+id/btn_filter_history"
        android:layout_below="@id/date_picker_history"></Button>

    <ListView
        android:id="@+id/list_history_item"
        android:layout_width="match_parent"
        android:divider="@null"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_history"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btn_filter_history"></ListView>
</RelativeLayout>