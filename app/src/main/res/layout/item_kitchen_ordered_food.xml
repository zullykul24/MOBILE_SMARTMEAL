<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    >
    <ImageView
        android:id="@+id/imageViewKitchenFoodOrdered"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/textViewNameKitchenFoodOrdered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine|textNoSuggestions"
        android:textStyle="bold"
        android:singleLine="false"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:scrollHorizontally="false"
        android:minLines="2"
        android:layout_marginLeft="15dp"

        android:layout_toRightOf="@id/imageViewKitchenFoodOrdered"
        android:text="Name aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/text_table"

        android:layout_below="@id/textViewNameKitchenFoodOrdered"
        android:layout_alignLeft="@id/textViewNameKitchenFoodOrdered"
        android:text="Bàn số ">

    </TextView>
    <TextView
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/tableId"

        android:layout_toRightOf="@id/text_table"
        android:layout_alignTop="@id/text_table"
        android:layout_alignBottom="@id/text_table"
        ></TextView>


    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewKitchenFoodOrdered"
        >

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textStyle="bold"
            android:inputType="number"
            android:layout_centerVertical="true"
            android:id="@+id/numberOrdered"
            android:gravity="center"
            android:textSize="25sp"></TextView>

    </RelativeLayout>



</RelativeLayout>
